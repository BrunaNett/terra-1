<h2 class="col-lg-10">These are all your listings</h2>
<div class="col-lg-10"> <%= @user.name %> </div>
<% @user_listings.each do |listing|%>
	<p class="col-lg-10"> Title: <%= listing.title %></br></p>
	<p class="col-lg-10"> Description: <%= listing.description %></br></p>
	<p class="col-lg-10"> Acres: <%= listing.acres %></br></p>
	<p class="col-lg-10"> Price: <%= listing.price %></br></p>
  <div class="col-lg-10"> <%= image_tag listing.image.url(:thumb) %> </div>
	<p class="col-lg-10"><%= link_to "Edit this listing", edit_listing_path(listing) %></br></p>

  <!-- add a link to be able to edit each listing -->
<% end %>

<p class="col-lg-10"><%= link_to "Create another listing", new_listing_path, class: "new_seller"%></br></p>
<p class="col-lg-10"><%= link_to "Send me back to the home page", root_path%></br><p/>
